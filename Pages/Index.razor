@page "/"
@using NewsSMKN6Malang.Data
@inject NewsService NewsService

<div class="max-w-7xl mx-auto space-y-8">
    
    <!-- Top Section: Menu Tabs & Search (Visual only, functional in Layout) -->
    <div class="flex items-center justify-between">
        <h2 class="text-2xl font-heading font-bold text-gray-800">Berita Utama</h2>
        <div class="flex items-center gap-2 text-sm text-gray-500">
             <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
             Live Update: @DateTime.Now.ToString("HH:mm")
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        
        <!-- Main Headline (Span 2) -->
        <div class="lg:col-span-2">
            @if (newsList != null && newsList.Any())
            {
                var mainNews = newsList.First();
                <div class="relative h-[400px] rounded-2xl overflow-hidden group cursor-pointer shadow-lg hover:shadow-2xl transition-all duration-500">
                    <img src="@mainNews.ImageUrl" class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" alt="@mainNews.Title" />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/40 to-transparent"></div>
                    
                    <div class="absolute bottom-0 left-0 p-8 w-full z-10">
                        <span class="bg-primary text-white text-xs font-bold px-3 py-1.5 rounded-md mb-3 inline-block shadow-md">@mainNews.Category</span>
                        <h1 class="text-3xl md:text-4xl font-bold text-white mb-3 leading-tight group-hover:text-blue-200 transition-colors drop-shadow-sm">@mainNews.Title</h1>
                        <div class="flex items-center gap-4 text-gray-300 text-sm font-medium">
                            <span class="flex items-center gap-1">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                                @mainNews.PublishedDate.ToString("dd MMM yyyy")
                            </span>
                            <span class="flex items-center gap-1">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/></svg>
                                35 Komentar
                            </span>
                             <button class="ml-auto bg-white/20 hover:bg-white text-white hover:text-gray-900 px-5 py-2 rounded-lg text-xs font-bold backdrop-blur-md transition-all">BACA BERITA</button>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Side List (Sports/Activities) -->
        <div class="bg-white rounded-2xl p-6 border border-gray-100 shadow-sm flex flex-col h-[400px]">
            <div class="flex justify-between items-center mb-6">
                <h3 class="font-bold text-lg text-gray-800">Kegiatan Terbaru</h3>
                <a href="#" class="text-xs font-semibold text-primary hover:underline">Lihat Semua</a>
            </div>

            <div class="space-y-6 overflow-y-auto flex-1 pr-2 custom-scrollbar">
                @if (newsList != null) {
                    @foreach(var item in newsList.Skip(1).Take(4))
                    {
                        <div class="flex gap-4 group cursor-pointer hover:bg-gray-50 p-2 rounded-lg transition-colors -mx-2">
                            <div class="w-16 h-16 rounded-lg bg-gray-200 overflow-hidden flex-shrink-0">
                                <img src="@item.ImageUrl" class="w-full h-full object-cover group-hover:scale-110 transition-transform" />
                            </div>
                            <div class="flex-1">
                                <h4 class="font-bold text-sm text-gray-800 mb-1 line-clamp-2 group-hover:text-primary transition-colors leading-snug">@item.Title</h4>
                                <div class="flex justify-between items-center mt-2">
                                    <span class="text-[10px] uppercase font-bold text-gray-500 bg-gray-100 px-2 py-0.5 rounded">@item.Category</span>
                                    <span class="text-xs font-semibold text-gray-400">@item.PublishedDate.ToString("dd/MM")</span>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

    <!-- Bottom Section: Video / Other News -->
    <div>
        <div class="flex justify-between items-center mb-6">
            <h3 class="font-bold text-xl text-gray-800">Galeri & Video</h3>
            <div class="flex gap-2">
                <button class="w-8 h-8 flex items-center justify-center rounded-full bg-white border border-gray-200 hover:bg-gray-50 text-gray-500 shadow-sm transition-all"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"/></svg></button>
                <button class="w-8 h-8 flex items-center justify-center rounded-full bg-white border border-gray-200 hover:bg-gray-50 text-gray-500 shadow-sm transition-all"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"/></svg></button>
            </div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Video Card 1 -->
            <div class="group cursor-pointer">
                <div class="relative h-48 rounded-xl overflow-hidden mb-3 shadow-md">
                    <img src="https://via.placeholder.com/400x300?text=Video+Kegiatan" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
                    <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-colors flex items-center justify-center">
                        <div class="w-12 h-12 rounded-full bg-white/90 flex items-center justify-center pl-1 shadow-lg group-hover:scale-110 transition-transform">
                             <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="text-primary"><polygon points="5 3 19 12 5 21 5 3"/></svg>
                        </div>
                    </div>
                    <span class="absolute bottom-2 right-2 bg-black/70 text-white text-[10px] font-bold px-2 py-1 rounded">05:20</span>
                </div>
                <h4 class="font-bold text-gray-800 leading-snug group-hover:text-primary transition-colors">Dokumentasi Ulang Tahun Sekolah ke-45</h4>
                <p class="text-xs text-gray-500 mt-1 flex items-center gap-1">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                    2 Hari yang lalu
                </p>
            </div>

             <!-- Video Card 2 -->
             <div class="group cursor-pointer">
                <div class="relative h-48 rounded-xl overflow-hidden mb-3 shadow-md">
                    <img src="https://via.placeholder.com/400x300?text=Profil+Jurusan" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
                    <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-colors flex items-center justify-center">
                        <div class="w-12 h-12 rounded-full bg-white/90 flex items-center justify-center pl-1 shadow-lg group-hover:scale-110 transition-transform">
                             <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="text-primary"><polygon points="5 3 19 12 5 21 5 3"/></svg>
                        </div>
                    </div>
                    <span class="absolute bottom-2 right-2 bg-black/70 text-white text-[10px] font-bold px-2 py-1 rounded">12:30</span>
                </div>
                <h4 class="font-bold text-gray-800 leading-snug group-hover:text-primary transition-colors">Profil Jurusan Rekayasa Perangkat Lunak</h4>
                <p class="text-xs text-gray-500 mt-1 flex items-center gap-1">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                    1 Minggu yang lalu
                </p>
            </div>

            <!-- More News List -->
            <div class="bg-gradient-to-br from-blue-50 to-white rounded-xl p-5 border border-blue-100 shadow-sm flex flex-col">
                <div class="flex items-center gap-2 mb-4">
                    <span class="p-1.5 bg-blue-100 rounded-md text-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/><polyline points="14 2 14 8 20 8"/><path d="M12 18v-6"/><path d="m9 15 3 3 3-3"/></svg>
                    </span>
                    <h4 class="font-bold text-gray-800 text-sm uppercase tracking-wide">Pengumuman</h4>
                </div>
                
                 <ul class="space-y-4 flex-1">
                     <li class="pb-3 border-b border-blue-100 last:border-0 last:pb-0">
                         <a href="#" class="block group">
                             <span class="text-[10px] font-bold text-blue-500 mb-1 block uppercase">Akademik • Baru</span>
                             <p class="text-sm font-bold text-gray-700 group-hover:text-primary transition-colors leading-tight">Jadwal Ujian Akhir Semester Genap T.A 2025/2026</p>
                         </a>
                     </li>
                      <li class="pb-3 border-b border-blue-100 last:border-0 last:pb-0">
                         <a href="#" class="block group">
                             <span class="text-[10px] font-bold text-gray-400 mb-1 block uppercase">Kesiswaan</span>
                             <p class="text-sm font-bold text-gray-700 group-hover:text-primary transition-colors leading-tight">Tata Tertib Baru Siswa Tahun Ajaran 2026</p>
                         </a>
                     </li>
                 </ul>
                 <button class="w-full mt-4 bg-white text-primary text-xs font-bold py-2.5 rounded-lg border border-blue-200 hover:bg-primary hover:text-white transition-all shadow-sm flex items-center justify-center gap-2 group">
                     Lihat Semua
                     <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:translate-x-1 transition-transform"><line x1="5" y1="12" x2="19" y2="12"/><polyline points="12 5 19 12 12 19"/></svg>
                 </button>
            </div>
        </div>
    </div>

</div>

@code {
    private List<NewsItem> newsList;

    protected override async Task OnInitializedAsync()
    {
        newsList = await NewsService.GetNewsAsync();
    }
}