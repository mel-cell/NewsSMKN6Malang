@inherits LayoutComponentBase

@inherits LayoutComponentBase

<div class="flex h-screen bg-gray-50 font-sans overflow-hidden">
    <!-- Sidebar -->
    <aside class="w-64 bg-white border-r border-gray-100 flex flex-col hidden md:flex z-20">
        <div class="p-6 flex items-center gap-3">
             <!-- Brand -->
            <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-primary to-blue-600 flex items-center justify-center text-white font-bold">
                M
            </div>
            <span class="text-xl font-heading font-bold text-gray-800">SMKN 6</span>
        </div>

        <nav class="flex-1 px-4 py-2 space-y-1 overflow-y-auto">
            <div class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2 mt-4 px-2">Menu Utama</div>
            <NavLink href="/" Match="NavLinkMatch.All" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-gray-600 hover:bg-blue-50 hover:text-primary transition-all group">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
                <span class="font-medium">Beranda</span>
            </NavLink>
            <NavLink href="/news" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-gray-600 hover:bg-blue-50 hover:text-primary transition-all group">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="2" y1="12" x2="22" y2="12"/><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/></svg>
                <span class="font-medium">Berita Terkini</span>
            </NavLink>
            <NavLink href="/videos" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-gray-600 hover:bg-blue-50 hover:text-primary transition-all group">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="23 7 16 12 23 17 23 7"/><rect x="1" y="5" width="15" height="14" rx="2" ry="2"/></svg>
                <span class="font-medium">Video Kegiatan</span>
            </NavLink>

            <div class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2 mt-8 px-2">Kategori</div>
            <a href="#" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-gray-600 hover:bg-blue-50 hover:text-primary transition-all">
                <span class="w-2 h-2 rounded-full bg-blue-500"></span>
                <span class="font-medium">Teknologi</span>
            </a>
            <a href="#" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-gray-600 hover:bg-blue-50 hover:text-primary transition-all">
                <span class="w-2 h-2 rounded-full bg-yellow-500"></span>
                <span class="font-medium">Prestasi</span>
            </a>
            <a href="#" class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-gray-600 hover:bg-blue-50 hover:text-primary transition-all">
                <span class="w-2 h-2 rounded-full bg-green-500"></span>
                <span class="font-medium">Akademik</span>
            </a>
        </nav>

        <div class="p-4 border-t border-gray-100">
            <div class="bg-blue-50 rounded-xl p-4 relative overflow-hidden group">
                <div class="relative z-10">
                    <h5 class="text-sm font-bold text-primary mb-1">PPDB 2026</h5>
                    <p class="text-xs text-blue-600/80 mb-3">Pendaftaran segera dibuka.</p>
                    <button class="text-xs bg-primary text-white px-3 py-1.5 rounded-md hover:shadow-lg hover:-translate-y-0.5 transition-all">Info Detail</button>
                </div>
                <div class="absolute -right-4 -bottom-4 w-20 h-20 bg-blue-200/50 rounded-full group-hover:scale-110 transition-transform"></div>
            </div>
        </div>
    </aside>

    <!-- Main Content -->
    <div class="flex-1 flex flex-col h-screen overflow-hidden relative">
        <!-- Header -->
        <header class="h-16 bg-white border-b border-gray-100 flex items-center justify-between px-6 z-10">
            <div class="flex items-center gap-4 flex-1">
                <button class="md:hidden text-gray-500">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="3" y1="12" x2="21" y2="12"/><line x1="3" y1="6" x2="21" y2="6"/><line x1="3" y1="18" x2="21" y2="18"/></svg>
                </button>
                <div class="relative w-full max-w-sm hidden md:block">
                    <input type="text" placeholder="Cari berita..." class="w-full pl-10 pr-4 py-2 bg-gray-50 border-none rounded-lg text-sm focus:ring-2 focus:ring-primary/20 focus:bg-white transition-all outline-none text-gray-600 placeholder-gray-400">
                    <svg class="absolute left-3 top-2.5 text-gray-400 w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
                </div>
            </div>

            <div class="flex items-center gap-4">
                <button class="text-gray-400 hover:text-primary transition-colors relative">
                    <span class="absolute top-0 right-0 w-2 h-2 bg-red-500 rounded-full border-2 border-white"></span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"/><path d="M13.73 21a2 2 0 0 1-3.46 0"/></svg>
                </button>
                <div class="h-8 w-8 rounded-lg bg-gray-200 overflow-hidden border border-gray-200">
                     <img src="https://ui-avatars.com/api/?name=Admin+SMK&background=0056D2&color=fff" alt="User" class="w-full h-full object-cover">
                </div>
            </div>
        </header>

        <!-- Scrollable Area -->
        <main class="flex-1 overflow-y-auto bg-gray-50 p-6">
            @Body
        </main>
    </div>
</div>